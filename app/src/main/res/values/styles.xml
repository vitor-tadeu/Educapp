<resources>
        <!-- Cores da ActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Sem ActionBar nas janelas -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tela Fullscreen -->
    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ProgressBar -->
    <style name="ProgressBar">
        <item name="colorAccent">@color/rosa</item>
    </style>

    <!-- Menu fonte ActionBar-->
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Menu -->
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Hint CabeÃ§alho evento-->
    <style name="HintCabecalho" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/branco1</item>
        <item name="colorControlNormal">@color/branco1</item>
        <item name="colorControlActivated">@color/branco1</item>
    </style>
</resources>